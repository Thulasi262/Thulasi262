#include<stdio.h>
void main()

{
    int n,i,sum;
    printf("Enter an integer:");
    scanf("%d",&n);
    for(int i=1;i<=n/2;i++)
    {
      if(n%i==0)
       {
        sum+=i;
       }
    }
    if(sum==n)
    {
      printf("%d is a perfect number\n",n);
    }
    else
    {
      printf("%d is not a perfect number\n",n);
    }
}
********************************************************************************
OUTPUT:
Enter an integer:6
6 is a perfect number.
********************************************************************************
